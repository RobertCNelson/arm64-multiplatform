 	drm_sched_fence_init(job->s_fence, job->entity);
@@ -933,6 +961,13 @@ drm_sched_select_entity(struct drm_gpu_scheduler *sched)
 	if (!drm_sched_can_queue(sched))
 		return NULL;
 
